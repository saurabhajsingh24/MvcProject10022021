    <script>
        $(document).ready(function () {
            debugger;
            $("#MasterAc").autocomplete({
                source: function (request, response) {
                    debugger
                    $.ajax({
                        url: '@Url.Action("GetAccountID", "VoucherType")',
                        type: "POST",
                        dataType: "json",
                        data: { prefix: request.term },
                        success: function (data) {
                            response($.map(data, function (item) {
                                return {
                                    label: item.AccountName, value: item.AccountName, id: item.MasterAcID
                                };
                            }))
                        },
                    })
                },
                minLength: 1,
                change: function (event, i) {
                    debugger
                    if (!i.item) {
                        this.value = '';
                        $("#MasterAc").val('');
                    }
                    $('#MasterAcID').val(i.item.id);
                    //alert($('#MasterAcID').val());
                }
            });
        });
    </script>

