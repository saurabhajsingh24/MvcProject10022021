    <script type="text/javascript">
        $(document).ready(function () {
            $('#voucherTypeTableId').delegate('td', 'click', function () {
                $("#save").html("<i class='fa fa-save'></i>Update");
                debugger;
                var row = $(this).parent().index();
                var VoucherTypeName = document.getElementById("voucherTypeTableId").tBodies[0].rows[row].cells[1].innerHTML;
                var Narration = document.getElementById("voucherTypeTableId").tBodies[0].rows[row].cells[2].innerHTML;
                var DebitmasterAcc = document.getElementById("voucherTypeTableId").tBodies[0].rows[row].cells[3].children[0].value;
                var EditmasterAcc = document.getElementById("voucherTypeTableId").tBodies[0].rows[row].cells[4].children[0].value;
                var Codeblock = document.getElementById("voucherTypeTableId").tBodies[0].rows[row].cells[5].innerHTML;
                var MasterAc = document.getElementById("voucherTypeTableId").tBodies[0].rows[row].cells[6].innerHTML;
                var MasterAcID = document.getElementById("voucherTypeTableId").tBodies[0].rows[row].cells[7].innerHTML;
                var VoucherTypeID = document.getElementById("voucherTypeTableId").tBodies[0].rows[row].cells[8].innerHTML;
                $('#VoucherTypeName').val(VoucherTypeName);
                $('#MasterAcID').val(MasterAcID);
                $('#MasterAc').val(MasterAc);
                //$('#MasterAc').val(MasterAc);
                $('#Narration').val(Narration);
                if (DebitmasterAcc == "True") {
                    $('#DebitmasterAcc').prop("checked", DebitmasterAcc);
                }
                else {
                    $('#DebitmasterAcc').prop("checked", false);
                }
                if (EditmasterAcc == "True") {
                    $('#EditmasterAcc').prop("checked", EditmasterAcc);
                }
                else {
                    $('#EditmasterAcc').prop("checked", false);
                }
                $('#Codeblock').val(Codeblock);
                $('#VoucherTypeID').val(VoucherTypeID);
            })
        });
    </script>
