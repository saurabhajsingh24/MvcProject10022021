@if (TempData["Msg"] != null)
{
    <script type="text/javascript">
        alert(@Html.Raw(Json.Encode(TempData["Msg"])));
        window.onload(true);
        Restor();
    </script>
}
<script type="text/javascript">
    $(document).ready(function () {
        $.ajax({
            type: "POST",
            //  contentType: "application/json; charset=utf-8",
            url: '@Url.Action("ShowPatientType", "PatientType")',
            //data: "{}",
            dataType: "json",
            success: function (data) {
                for (var i = 0; i < data.length; i++) {
                    var SrNo = i + 1;
                    $("#reasID").append('<tr><td>' + SrNo + '</td><td>' + data[i].PatientTypeName + '</td><td style="display:none">' + data[i].PatientTypeID + '</td></tr>');
                };
                $('#reasID').DataTable({
                    "fixedHeader": true,
                    "paging": true,
                    "lengthChange": true,
                    "searching": true,
                    "ordering": true,
                    "info": true,
                    "autoWidth": true,
                    "responsive": false,
                });
                var buttons = new $.fn.dataTable.Buttons($('#reasID').DataTable(), {
                    buttons: [
                        {
                            extend: 'excel',
                            text: '<li class="fa fa-file-excel-o fa-lg" style="font-weight: 600;"></li><br>Excel'
                        }
                    ]
                }).container().appendTo($('#reasIDExcelExport'));
            },
            error: function (result) {
                alert("Error grd bind");
            }
        });
    });
</script>
<script type="text/javascript">
    $(document).ready(function () {
        //  var table = $('#deptID').DataTable();
        $('#reasID').delegate('td', 'click', function () {
            var row = $(this).parent().index();
            $("#save").html("<i class='fa fa-save'></i>Update");
            var PatientTypeID = document.getElementById("reasID").tBodies[0].rows[row].cells[2].innerHTML;
            var PatientTypeName = document.getElementById("reasID").tBodies[0].rows[row].cells[1].innerHTML;
            $('#PatientTypeID').val(PatientTypeID);
            $('#PatientTypeName').val(PatientTypeName);
        })
    });
</script>
<script>
    $(document).ready(function () {
        $("#Delete").click(function () {
            // alert($("#OutSourceLabID").val());
