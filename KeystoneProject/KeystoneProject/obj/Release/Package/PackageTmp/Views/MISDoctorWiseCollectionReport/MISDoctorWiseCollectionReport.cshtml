                                <label class="lbl" id="lbl_total1" name="lbl_total1" style="display:none">0.00</label>
                            }*@
                        }
                        <div class="col-md-2 col-sm-2 col-xs-12">
                            @*<label class="lbl" id="lbl_total" name="lbl_total">000.00</label>*@
                            <label class="lbl" id="lbl_total1" name="lbl_total1" style=" display:none">0.00</label>
                        </div>
