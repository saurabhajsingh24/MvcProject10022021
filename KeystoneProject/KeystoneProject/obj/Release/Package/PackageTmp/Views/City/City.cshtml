<script>
    function Delete(CityID) {
        debugger
        if (CityID != "" && $("#CityName").val() != "") {
            var ans = confirm("Are you sure you want to Delete this Record ?");
            if (ans) {
                $.ajax({
                    type: "POST",
                    url: '@Url.Action("DeleteCity", "City")',
                    data: { CityID: CityID },
                    dataType: "json",
                    success: function (data) {
                        if (data == "City Deleted Successfully !") {
                            alert("City Deleted Successfully !");
                            window.location.reload(true);
                            Restore();
                        }
                        else {
                            alert(data);
                        }
                    },
                    error: function (errormessage) {
                        alert(errormessage.responseText);
                    }
                });
            }
        }
    }
</script>
<script>
    $(document).ready(function () {
        $("#StateName").autocomplete
              ({
                  source: function (request, response) {
                      $.ajax
                          ({
                              url: '@Url.Action("GetStateRecord", "City")',
                              type: "POST",
                              dataType: "json",
                              data: { prefix: request.term },
                              success: function (data) {
                                  response($.map(data, function (item) {
                                      return {
                                          label: item.StateName, value: item.StateName, id: item.StateID, CountryID: item.CountryID, CountryName: item.CountryName
                                      };
                                  }))
                              }
                          })
                  },
                  minLength: 1,
                  change: function (event, i) {
                      if (!i.item) {
                          this.value = "";
                      }
                  },
                  select: function (event, i) {
                      $('#StateID').val(i.item.id);
                      $("#CountryName").val(i.item.CountryName);
                      $("#CountryID").val(i.item.CountryID);
                      $("#StateName").val(i.item.StateName);
                  },
              });
        $.ajax
            ({
                type: "POST",
                url: '@Url.Action("DatatableBind", "City")',
                dataType: "json",
                success: function (result) {
                    var Srno = 1;
                    $.each(result, function (i, obj) {
                        $("#cityTableId").append('<tr><td>' + Srno + '</td><td style="display:none">' + obj.CityID + '</td><td>' + obj.CityName + '</td><td <td style="display:none">' + obj.ReferenceCode + '</td></tr>')
                        Srno++;
                    });
                    $('#cityTableId').DataTable({
                        "fixedHeader": true,
                        "paging": true,
                        "lengthChange": true,
                        "searching": true,
                        "ordering": true,
                        "info": true,
                        "autoWidth": true,
                        "responsive": false,
                    });
                    var buttons = new $.fn.dataTable.Buttons($('#cityTableId').DataTable(), {
                        buttons: [
                            {
                                extend: 'excel',
                                text: '<li class="fa fa-file-excel-o fa-lg" style="font-weight: 600;"></li><br>Excel'
                            }
                        ]
                    }).container().appendTo($('#cityExcelExport'));
                },
                error: function () {
                }
            });
        $(document).ready(function () {
            $("#cityTableId").delegate('td', 'click', function () {
                debugger;
                Restore();
                $("#save").html("<i class='fa fa-save'></i>Update");
                var row_num = parseInt($(this).parent().index());
                var CityID = parseInt(document.getElementById("cityTableId").tBodies[0].rows[row_num].cells[1].innerHTML);
                var CityName = document.getElementById("cityTableId").tBodies[0].rows[row_num].cells[2].innerHTML;
                var ReferenceCode = document.getElementById("cityTableId").tBodies[0].rows[row_num].cells[3].innerHTML;
                
                $("#CityID").val(CityID);
                $("#CityName").val(CityName);
                $("#ReferenceCode").val(ReferenceCode);
               
                $.ajax
                    ({
                        type: "GET",
                        url: '@Url.Action("Fill", "City")',
                        data: { CityID: CityID },
                        success: function (result) {
                            $.each(result, function (i, obj) {
                                $("#CityID").val(CityID);
                                $("#CityName").val(obj.CityName);
                                $("#CountryName").val(obj.CountryName);
                                $("#StateName").val(obj.StateName);
                                $("#ReferenceCode").val(obj.ReferenceCode);
                                $('#CountryID').val(obj.CountryID);
                                $('#StateID').val(obj.StateID);
                            });
                        }
                    })
            });
        });
    });
    function Restore() {
        $("#CityID").val("");
        $("#CityName").val("");
        $("#CountryName").val("");
        $("#StateName").val("");
        $("#ReferenceCode").val("");
        $('#CountryID').val("");
        $('#StateID').val("");
    }
</script>
