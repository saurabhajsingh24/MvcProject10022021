            "autoWidth": true,
            "responsive": false,
        });
        var buttons = new $.fn.dataTable.Buttons($('#patientdetails').DataTable(), {
            buttons: [
                {
                    extend: 'excel',
                    text: '<li class="fa fa-file-excel-o fa-lg" style="font-weight: 600;"></li><br>Excel'
                }
            ]
        }).container().appendTo($('#patientdetailsExcelExport'));
    })
</script>
