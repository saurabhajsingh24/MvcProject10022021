<body class="hold-transition skin-blue sidebar-mini">
    <div class="wrapper">
        <div class="content-wrapper">
            <section class="content-header">
                <div class="container-fluid">
                    <div class="row">
                        <div class="col-sm-6">
                            <h1>New IPD Patient Report</h1>
                        </div>
                        <div class="col-sm-6">
                            <ol class="breadcrumb float-sm-right">
                                <li class="breadcrumb-item"><a href="@Url.Action("Dashboard","Home")">Home</a></li>
                                <li class="breadcrumb-item"><a href="@Url.Action("PatientReport", "Application")">Report</a></li>
                                <li class="breadcrumb-item active">New IPD Patient</li>
                            </ol>
                        </div>
                    </div>
                </div>
            </section>
            <section class="content">
                <div class="container-fluid">
                    <div class="row">
                        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                            <div class="card card-primary panel-primary">
                                <h2 class="panelheading">Patient Search</h2>
                                <div class="card-body pane-body">
                                    <div class="row">
                                        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                                            <!--From Date-->
                                            <div class="form-group col-lg-4 col-md-12 col-sm-12 col-xs-12">
                                                <div class="col-lg-4 col-md-6 col-sm-12 col-xs-12">
                                                    <label>From Date</label>
                                                </div>
                                                <div class="col-lg-8 col-md-6 col-sm-12 col-xs-12">
                                                    <input type="date" value="@DateTime.Now.ToString("yyyy-MM-dd")" id="FromDate" name="FromDate" class="form-control">
                                                </div>
                                            </div>
                                            <!--To Date-->
                                            <div class="form-group col-lg-4 col-md-12 col-sm-12 col-xs-12">
                                                <div class="col-lg-4 col-md-6 col-sm-12 col-xs-12">
                                                    <label>To Date</label>
                                                </div>
                                                <div class="col-lg-8 col-md-6 col-sm-12 col-xs-12">
                                                    <input type="date" value="@DateTime.Now.ToString("yyyy-MM-dd")" id="ToDate" name="ToDate" class="form-control">
                                                </div>
                                            </div>
                                            <!--Department-->
                                            <div class="form-group col-lg-4 col-md-12 col-sm-12 col-xs-12">
                                                <div class="col-lg-4 col-md-6 col-sm-12 col-xs-12">
                                                    <label>Department </label>
                                                </div>
                                                <div class="col-lg-8 col-md-6 col-sm-12 col-xs-12">
                                                    <select class="form-control" id="Department" name="Department">
                                                        @{
                                                            <option value="%">--All--</option>
                                                            for (int i = 0; i < Model.dsDepartment.Tables[0].Rows.Count; i++)
                                                            {
                                                                string DoctorPrintName = Model.dsDepartment.Tables[0].Rows[i]["DepartmentName"].ToString();
                                                                string DoctorID = Model.dsDepartment.Tables[0].Rows[i]["DepartmentID"].ToString();
                                                                <option value=@DoctorID>@DoctorPrintName</option>
                                                            }
                                                        }
                                                    </select>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                                            <!--Consultant Doctor-->
                                            <div class="form-group col-lg-4 col-md-12 col-sm-12 col-xs-12">
                                                <div class="col-lg-4 col-md-6 col-sm-12 col-xs-12">
                                                    <label>Consultant Dr</label>
                                                </div>
                                                <div class="col-lg-8 col-md-6 col-sm-12 col-xs-12">
                                                    <select class="form-control" id="Consultant" name="Consultant">
                                                        @{
                                                            <option value="%">--All--</option>
                                                            for (int i = 0; i < Model.dscons.Tables[0].Rows.Count; i++)
                                                            {
                                                                string DoctorPrintName = Model.dscons.Tables[0].Rows[i]["DoctorPrintName"].ToString();
                                                                string DoctorID = Model.dscons.Tables[0].Rows[i]["DoctorID"].ToString();
                                                                <option value=@DoctorID>@DoctorPrintName</option>
                                                            }
                                                        }
                                                    </select>
                                                </div>
                                            </div>
                                            <!--Referred Doctor-->
                                            <div class="form-group col-lg-4 col-md-12 col-sm-12 col-xs-12">
                                                <div class="col-lg-4 col-md-6 col-sm-12 col-xs-12">
                                                    <label>Referred Dr</label>
                                                </div>
                                                <div class="col-lg-8 col-md-6 col-sm-12 col-xs-12">
                                                    <select class="form-control" id="Referred" name="Referred">
                                                        @{
                                                            <option value="%">--All--</option>
                                                            for (int i = 0; i < Model.dsReferd.Tables[0].Rows.Count; i++)
                                                            {
                                                                string DoctorPrintName = Model.dsReferd.Tables[0].Rows[i]["DoctorPrintName"].ToString();
                                                                string DoctorID = Model.dsReferd.Tables[0].Rows[i]["DoctorID"].ToString();
                                                                <option value=@DoctorID>@DoctorPrintName</option>
                                                            }
                                                        }
                                                    </select>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12" style="text-align: center;">
                            <div class="btn-group dropdown-split-warning">
                                <a class="btn btn-app" onclick="window.location.href='@Url.Action("PatientReport", "Application")'">
                                    <i class="fa fa-sign-out"></i>Exit
                                </a>
                            </div>
                            <div class="btn-group dropdown-split-warning">
                                <button type="button" id="submit" name="submit" class="btn btn-app">
                                    <i class="fa fa-search"></i>Search
                                </button>
                            </div>
                            <div class="btn-group dropdown-split-warning ex-btn" style="display: none;">
                                <a class="btn btn-app" id="newIPdPatientExcelExport"></a>
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class=" col-lg-12 col-md-12 col-sm-12 col-xs-12 table-responsive">
                            <table id="newIPdPatientTableId" class="table table-bordered hover display dataTable table-hover" role="grid" style="width: 100%">
                                <thead style="background-color: #bddff7;">
                                    <tr>
                                        <th>UHID No.</th>
                                        <th>OPD No.</th>
                                        <th>Patient Name</th>
                                        <th>Address</th>
                                        <th>Consultant Doctor / Department Name / Referred Doctor</th>
                                    </tr>
                                </thead>
                                <tbody class="scrollbar"></tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </section>
        </div>
    </div>
</body>
