                                </ol>
                            </div>
                        </div>
                    </div>
                </section>
                <section class="content">
                    <div class="container-fluid">
                        <div class="row">
                            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                                <div class="card card-primary panel-primary">
                                    <h2 class="panelheading">MIS Service Wise Collection Search</h2>
                                    <div class="card-body pane-body">
                                        <div class="row">
                                            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                                                <!--From Date-->
                                                <div class="form-group col-lg-4 col-md-12 col-sm-12 col-xs-12">
                                                    <div class="col-lg-4 col-md-6 col-sm-12 col-xs-12">
                                                        <label>From Date</label>
                                                    </div>
                                                    <div class="col-lg-8 col-md-6 col-sm-12 col-xs-12">
                                                        <input type="date" id="FromDate" name="FromDate" value="@DateTime.Now.ToString("yyyy-MM-dd")" max="9999-12-31" class="form-control">
                                                    </div>
                                                </div>
                                                <!--To Date-->
                                                <div class="form-group col-lg-4 col-md-12 col-sm-12 col-xs-12">
                                                    <div class="col-lg-4 col-md-6 col-sm-12 col-xs-12">
                                                        <label>To Date</label>
                                                    </div>
                                                    <div class="col-lg-8 col-md-6 col-sm-12 col-xs-12">
                                                        <input type="date" id="ToDate" name="ToDate" value="@DateTime.Now.ToString("yyyy-MM-dd")" max="9999-12-31" class="form-control">
                                                    </div>
                                                </div>
                                                <!--Patient Type-->
                                                <div class="form-group col-lg-4 col-md-12 col-sm-12 col-xs-12">
                                                    <div class="col-lg-4 col-md-6 col-sm-12 col-xs-12">
                                                        <label>Patient Type</label>
                                                    </div>
                                                    <div class="col-lg-8 col-md-6 col-sm-12 col-xs-12">
                                                        <select class="form-control" id="patient_type" name="patient_type">
                                                            <option value="All">All</option>
                                                            <option value="OPD">OPD</option>
                                                            <option value="IPD">IPD</option>
                                                        </select>
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                                                <!--Service Name-->
                                                <div class="form-group col-lg-4 col-md-12 col-sm-12 col-xs-12">
                                                    <div class="col-lg-4 col-md-6 col-sm-12 col-xs-12">
                                                        <label>Serv. Name</label>
                                                    </div>
                                                    <div class="col-lg-8 col-md-6 col-sm-12 col-xs-12">
                                                        <input type="text" id="ServiceName" name="ServiceName" class="form-control" placeholder="service Name">
                                                        <input type="hidden" name="ServiceID" id="ServiceID" class="form-control">
                                                    </div>
                                                </div>
                                                <!--Service Group-->
                                                <div class="form-group col-lg-4 col-md-12 col-sm-12 col-xs-12">
                                                    <div class="col-lg-4 col-md-6 col-sm-12 col-xs-12">
                                                        <label>Serv. Group</label>
                                                    </div>
                                                    <div class="col-lg-8 col-md-6 col-sm-12 col-xs-12">
                                                        <input type="text" id="ServiceGroup" name="ServiceGroup" class="form-control" placeholder="Service Group">
                                                        <input type="hidden" name="ServiceGroupID" id="ServiceGroupID" class="form-control">
                                                    </div>
                                                </div>
                                                <!--Patient Name-->
                                                <div class="form-group col-lg-4 col-md-12 col-sm-12 col-xs-12">
                                                    <div class="col-lg-4 col-md-6 col-sm-12 col-xs-12">
                                                        <label>Patient Name</label>
                                                    </div>
                                                    <div class="col-lg-8 col-md-6 col-sm-12 col-xs-12">
                                                        <input type="text" id="PatientName" name="PatientName" class="form-control" placeholder="Patient Name">
                                                        <input type="hidden" name="PatientRegNo" id="PatientRegNo" class="form-control">
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12" style="text-align: center;">
                                <div class="btn-group dropdown-split-warning">
                                    <button type="submit" id="save" name="save" class="btn btn-app">
                                        <i class="fa fa-search"></i>Search
                                    </button>
                                </div>
                                <div class="btn-group dropdown-split-warning">
                                    <a class="btn btn-app" onclick="location.reload();">
                                        <i class="fa fa-refresh"></i>Clear
                                    </a>
                                </div>
                                <div class="btn-group dropdown-split-warning">
                                    <a class="btn btn-app" onclick="window.location.href='@Url.Action("MISReports", "Application")'">
                                        <i class="fa fa-sign-out"></i>Exit
                                    </a>
                                </div>
                                <div class="btn-group dropdown-split-warning">
                                    <button type="button" id="Report" onclick="window.location.href='@Url.Action("RptMISServicesWiseCollectionNew", "MISServiceWiseCollectionReport")'" class="btn btn-app">
                                        <span class="fa fa-bar-chart"></span>Report
                                    </button>
                                </div>
                                <div class="btn-group dropdown-split-warning">
                                    <button type="button" id="Patientwise" onclick="window.location.href='@Url.Action("RptServicepatientwise", "MISServiceWiseCollectionReport")'" class="btn btn-app">
                                        <span class="fa fa-bar-chart"></span>Patient wise
                                    </button>
                                </div>
                                <div class="btn-group dropdown-split-warning ex-btn" style="display: none;">
                                    <a class="btn btn-app" id="servicedetailsExcelExport"></a>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12 table-responsive">
                                <table id="servicedetails" class="table table-bordered hover display dataTable table-hover" role="grid" style="width: 100%">
                                    <thead style="background-color: #bddff7;">
                                        <tr>
                                            @*<th scope="col">Sno.</th>*@
                                            <th scope="col" aria-controls="servicedetails">Service Group Name</th>
                                            <th scope="col" aria-controls="servicedetails">Service ID</th>
                                            <th scope="col" aria-controls="servicedetails">Service Name</th>
                                            <th scope="col" aria-controls="servicedetails">QTY</th>
                                            <th scope="col" aria-controls="servicedetails">Total Amount</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @{
                                            if (Model != null)
                                            {
                                                decimal GrossTotal = 0;
                                                for (int i = 0; i < Model.ds.Tables[0].Rows.Count; i++)
                                                {
                                                    string ServiceGroupName = Model.ds.Tables[0].Rows[i]["ServiceGroupName"].ToString();
                                                    string ServiceID = Model.ds.Tables[0].Rows[i]["ServiceID"].ToString();
                                                    string ServiceName = Model.ds.Tables[0].Rows[i]["ServiceName"].ToString();
                                                    string QTY = Model.ds.Tables[0].Rows[i]["QTY"].ToString();
                                                    string TotalAmount = Model.ds.Tables[0].Rows[i]["Total Amount"].ToString();
                                        <tr role="row" class="odd">
                                            <td scope="col">@ServiceGroupName</td>
                                            <td scope="col">@ServiceID</td>
                                            <td scope="col">@ServiceName</td>
                                            <td scope="col">@QTY</td>
                                            <td scope="col">@TotalAmount</td>
                                        </tr>
                                                    if (i < 10)
                                                    {
                                                        GrossTotal = GrossTotal + Convert.ToDecimal(Model.ds.Tables[0].Rows[i]["Total Amount"].ToString());
                                                        ViewData["TotalAmount"] = GrossTotal;
                                                    }
                                                }
                                            }
                                        }
                                    </tbody>
                                </table>

                                <div id="modalservicedetails" class="modal" aria-hidden="true">
                                    <div class="modal-dialog modal-lg">
                                        <div class="modal-content">
                                            <div class="modal-header">
                                                <h4 class="modal-title">Reports</h4>
                                                <button type="button" class="close" data-dismiss="modal">&times;</button>
                                            </div>
                                            <div class="modal-body">
                                                <div class="form-group col-lg-12">
                                                    <div class="col-lg-6">
                                                        <input type="button" style="font-size: 15px;" id="btnReport" value="Report" class="btn btn-success">
                                                        <input type="button" style="font-size: 15px;" id="close" value="Close" class="btn btn-danger">
                                                    </div>
                                                </div>
                                                <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                                                    <div class="table-responsive">
                                                        <table id="datatable-responsive" class="table table-bordered hover display table-hover" role="grid" style="width: 100%">
                                                            <thead style="background-color: #bddff7;">
                                                                <tr role="row">
                                                                    <th>Patient Reg. No.</th>
                                                                    <th>Patient Name</th>
                                                                    <th>Service Name</th>
                                                                    <th>QTY</th>
                                                                    <th>Total Amount</th>
                                                                </tr>
                                                            </thead>
                                                            <tbody></tbody>
                                                        </table>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="row" style="float:right;">
                            @*<div class="col-md-1 col-sm-1 col-xs-6">
                                    <button type="submit"  class="btn btn-primary">Year Wise</button>
                                </div>*@
                            <div class="control-label col-md-7 col-sm-7 col-xs-12" for="name">
                                <span class="required" style="font-size:15px;">Total Amount:</span>
                            </div>
                            <div class="col-md-2 col-sm-2 col-xs-12">
                                @{
                                    if (Model != null)
                                    {
                                <label class="lbl" id="totalamount" name="lbl_total">@Convert.ToString(Model.ds.Tables[0].Compute("sum([Total Amount])", string.Empty).ToString())</label>
                                    }
                                    else
                                    {
                                <label class="lbl" id="totalamount1" name="lbl_total">0.00</label>
                                    }
                                }
                            </div>
                        </div>
                    </div>
                </section>
            </div>
        </form>
    </div>
</body>