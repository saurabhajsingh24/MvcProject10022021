                data: { FromDate: $('#FromDate').val(), ToDate: $('#ToDate').val(), PatientType: $('#PatientType').val(), CategoryID: cat },
                dataType: "json",
                success: function (data) {
                    $("#labTestReportByCategoryTableId td").remove();
                    var table = "";
