            var ans = confirm("Are you sure you want to delete this Record?");
            if (ans) {
                $.ajax({
                    type: "POST",
                    url: '@Url.Action("Delete_Product", "ProductCompany")',
                    data: { nameID: nameID },
                    dataType: "json",
                    success: function (data) {
                        debugger
